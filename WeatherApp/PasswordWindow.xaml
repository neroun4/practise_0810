<Window x:Class="WeatherApp.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка пароля" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Введите пароль:" />
        <TextBox x:Name="passwordTextBox" Height="30" />
        <Button Content="Проверить" Click="CheckPassword" Height="30" Margin="0,10,0,0"/>
        <TextBlock x:Name="resultTextBlock" Height="30" />
    </StackPanel>
</Window>