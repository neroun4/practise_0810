<Window x:Class="WeatherApp.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Введите знак операции (+, -, *, /)" />
        <TextBox x:Name="operationTextBox" Height="30" />
        <TextBlock x:Name="resultTextBlock" Height="30" />
        <Button Content="Вычислить" Click="Calculate" Height="30" />
    </StackPanel>
</Window>