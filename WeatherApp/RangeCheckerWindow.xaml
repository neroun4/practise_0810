<Window x:Class="WeatherApp.RangeCheckerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка диапазона" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Введите число от 0 до 100" />
        <TextBox x:Name="numberTextBox" Height="30" />
        <TextBlock x:Name="resultTextBlock" Height="30" />
        <Button Content="Проверить" Click="CheckRange" Height="30" />
    </StackPanel>
</Window>